<h1>Listing volunteers</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Nick name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Shirt size</th>
    <th>City</th>
    <th>State</th>
    <th>Organization</th>
    <th>Level</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
    <td><%= volunteer.first_name %></td>
    <td><%= volunteer.last_name %></td>
    <td><%= volunteer.nick_name %></td>
    <td><%= volunteer.email %></td>
    <td><%= volunteer.phone %></td>
    <td><%= volunteer.shirt_size %></td>
    <td><%= volunteer.city %></td>
    <td><%= volunteer.state %></td>
    <td><%= volunteer.organization %></td>
    <td><%= volunteer.level %></td>
    <td><%= link_to 'Show', volunteer %></td>
    <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
    <td><%= link_to 'Destroy', volunteer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

