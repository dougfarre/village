<h1>Listing slots</h1>

<table>
  <tr>
    <th>Start datetime</th>
    <th>End datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slots.each do |slot| %>
  <tr>
    <td><%= slot.start_datetime %></td>
    <td><%= slot.end_datetime %></td>
    <td><%= link_to 'Show', slot %></td>
    <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
    <td><%= link_to 'Destroy', slot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

